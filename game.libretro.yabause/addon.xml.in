<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.yabause"
		name="Sega Saturn (Yabause)"
		version="0.9.14"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.saturn" version="1.0.0"/>
		<import addon="game.controller.saturn.3d" version="1.0.0"/>
		<import addon="game.controller.saturn.multitap" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Sega Saturn</platforms>
		<extensions>bin|cue|iso</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Sega Saturn (Yabause) v0.9.14</summary>
		<description>Yabause stands for Yet Another Buggy And Uncomplete Saturn Emulator. Yabause can boot Sega Saturn bios and games, some of which are playable.

Icon credit: Anarkhya (anarkhya.deviantart.com)

Supported files: .bin, .cue, .iso</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
