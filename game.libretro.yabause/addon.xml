<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.yabause"
        name="Sega Saturn (Yabause)"
	version="0.9.12"
        provider-name="Libretro">
    <requires>
      <import addon="game.libretro" version="1.0.0"/>
    </requires>
    <extension point="kodi.gameclient"
	       library_android="libgame.libretro.yabause.so"
               library_linux="game.libretro.yabause.so"
               library_osx="game.libretro.yabause.dylib"
               library_windx="game.libretro.yabause.dll"
               library_wingl="game.libretro.yabause.dll">
        <platforms>Sega Saturn</platforms>
        <extensions>bin|cue</extensions>
        <supports_vfs>false</supports_vfs>
        <supports_no_game>false</supports_no_game>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Yabause v0.9.12</summary>
        <description>Yabause stands for Yet Another Buggy And Uncomplete Saturn Emulator. Yabause can boot Sega Saturn bios and games, some of which are playable.

Supported files: .bin, .cue

Icon credit: Anarkhya (anarkhya.deviantart.com)

License: GPLv2</description>
        <platform>all</platform>
        <nofanart>true</nofanart>
    </extension>
</addon>
